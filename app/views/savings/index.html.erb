<h2>List of all savings</h2>

<br>

<%= link_to 'New Savings' , new_saving_path%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th> Value</th>
    </tr>
  </thead>

<tbody>
<% @savings.each do |saving| %>
<tr>
   <td><%= saving.name %></td>
   <td><%= saving.value %></td>
   <td><%= link_to 'Show Savings' , saving_path(saving)%> </td>
   <td><%= link_to 'Edit Savings' , edit_saving_path(saving)%> </td>
   <td><%= link_to 'Destroy', saving, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>
